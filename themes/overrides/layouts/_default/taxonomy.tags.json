{{- /* Create JSON array of objects for all tags */ -}}
{{- $tags := slice -}}
{{- /* Gather each tag key */ -}}
{{- range $name, $_ := .Site.Taxonomies.tags -}}
  {{- $tags = $tags | append $name -}}
{{- end -}}

{{- /* Sort tag names alphabetically */ -}}
{{- $sorted := sort $tags -}}

{{- /* Build array of {id, name} objects */ -}}
{{- $out := slice -}}
{{- range $sorted -}}
  {{- $out = $out | append (dict "id" . "name" .) -}}
{{- end -}}

{{- /* Emit final JSON */ -}}
{{- jsonify $out -}}
