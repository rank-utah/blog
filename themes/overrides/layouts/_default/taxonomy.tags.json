{{- /* Build a slice of all tag names */ -}}
{{- $tagNames := slice -}}
{{- range $name, $_ := .Site.Taxonomies.tags -}}
  {{- $tagNames = $tagNames | append $name -}}
{{- end -}}

{{- /* Sort the names alphabetically */ -}}
{{- $sorted := sort $tagNames -}}

{{- /* Build an array of {id, name} objects */ -}}
{{- $out := slice -}}
{{- range _, $tag := $sorted -}}
  {{- $out = $out | append (dict "id" $tag "name" $tag) -}}
{{- end -}}

{{- /* Emit it as JSON */ -}}
{{- jsonify $out -}}
