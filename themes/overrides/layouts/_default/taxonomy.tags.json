{{- /* 1) Gather all tag keys into a slice */ -}}
{{- $tagNames := slice -}}
{{- range $name, $_ := .Site.Taxonomies.tags -}}
  {{- $tagNames = $tagNames | append $name -}}
{{- end -}}

{{- /* 2) Sort them */ -}}
{{- $sorted := sort $tagNames -}}

{{- /* 3) Build an array of {id,name} objects */ -}}
{{- $out := slice -}}
{{- range $tag := $sorted -}}
  {{- $out = $out | append (dict "id" $tag "name" $tag) -}}
{{- end -}}

{{- /* 4) Emit JSON */ -}}
{{- jsonify $out -}}
